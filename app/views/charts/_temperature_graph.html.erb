<div class="row">
  <div id="temp_container" style="width:100%; height:250px;"></div>
  <script type="text/javascript">
    $(function () { 
        $('#temp_container').highcharts({
            plotOptions: {
              series: {
                animation: false
              }
            },

            chart: {
                animation: false
            },
            title: {
                text: 'Temperature(C)'
            },
            xAxis: {
              categories: <%=raw @observation_set.map {|b| b.created_at.strftime("%H%M") } %>
            },
            series: [
              {
                showInLegend: false,               
                data: <%=raw @observation_set.map {|b| [b.created_at.strftime("%H%M"), b.temperature.to_f] } %>
              }
            ]
        });
    });
  </script>
</div>
