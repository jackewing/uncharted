<h1>Patients</h1>
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                                <tr>
                                <th><span>Name</span></th>                                
                                <th><span>Last EWS</span></th>
                                
                                <th><span>Last visit</span></th>
                                <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                            	<% @patients.each do |patient| %>
                                <tr>
                                    <td>                                       
                                        <a href = <%= "/charts/"+patient.id.to_s %> class="user-link"><%=patient.name %></a>
                                    </td>
                                    <td>
                                         <%=patient.observation_sets.last.ews unless patient.observation_sets.blank? %>
                                    </td>
                                    <td><%= patient.observation_sets.last.created_at.strftime("%H:%M") unless patient.observation_sets.blank? %> </td>
                                     <td>
                                        <a href= <%="/patients/"+patient.id.to_s+"/observation_sets/new"  %> >Enter observation</a> 
                                        
                                    </td>
                                    <td style="width: 20%;">
                                        <a href=<%= "/charts/"+patient.id.to_s %> class="table-link">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-search-plus fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                        <a href=<%= "/charts/"+patient.id.to_s %> class="table-link">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-pencil fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                        <a href=<%= "/charts/"+patient.id.to_s %> class="table-link danger">
                                            <span class="fa-stack">
                                                <i class="fa fa-square fa-stack-2x"></i>
                                                <i class="fa fa-trash-o fa-stack-1x fa-inverse"></i>
                                            </span>
                                        </a>
                                    </td>
                                </tr>
                                <% end %>

                             </tbody>
	                    </table>
	                </div>
	            </div>
	        </div>
	    </div>
	</div>
</div>

	
	
	
